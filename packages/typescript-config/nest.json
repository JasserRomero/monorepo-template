{
  "extends": "@repo/tsconfig/base",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2023",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,

    "removeComments": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false
  },
  "ts-node": {
    "transpileOnly": true
  }
}